plugin.tx_solr {
  search {
    grouping = 1
    grouping {
      numberOfGroups = 5
      numberOfResultsPerGroup = 5
      allowGetParameterSwitch = 0
      groups {
        pidQuery {
          queries {
            lessThenTen = pid:[0 TO 10]
            lessThen30 = pid:[11 TO 30]
            rest = pid:[30 TO *]
          }
        }
      }
    }
  }
}
