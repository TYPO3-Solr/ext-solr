{
	"name": "apache-solr-for-typo3/solr",
	"description": "Apache Solr integration for TYPO3",
	"minimum-stability": "alpha",
	"license": "GPL-2.0+",
	"version": "3.1.0",
	"type": "typo3-cms-extension",
	"keywords": ["typo3", "TYPO3 CMS", "solr", "search"],
	"homepage": "http://www.typo3-solr.com",
	"authors": [
		{
			"name": "Ingo Renner",
			"email": "ingo@typo3.org",
			"role": "Lead Developer"
		}
	],
	"support": {
		"email": "typo3-project-solr@lists.typo3.org",
		"issues": "https://forge.typo3.org/projects/extension-solr/issues",
		"forum": "http://forum.typo3.org/index.php/f/53/",
		"wiki": "https://forge.typo3.org/projects/extension-solr/wiki",
		"source": "https://forge.typo3.org/projects/extension-solr/repository"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "http://composer.typo3.org/"
		}
	],
	"require": {
		"php": ">=5.3.7,<5.7.0"
	},
	"require-dev": {
		"typo3-ci/typo3cms": "dev-master"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "3.1.x-dev"
		}
	},
	"autoload": {
		"classmap": [
			"Lib/",
			"Classes/",
			"CliApi/",
			"Compat/",
			"EidApi/",
			"EidSuggest/",
			"Interfaces/",
			"ModAdmin/",
			"ModIndex/",
			"PiFrequentSearches/",
			"PiResults/",
			"PiSearch/",
			"Report/",
			"Scheduler/"
		],
		"psr-4": {
			"ApacheSolrForTypo3\\Solr\\": "Classes/"
		}
	}
}
